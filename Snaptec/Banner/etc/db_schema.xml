<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="banner">
        <column xsi:type="int" name="banner_id" padding="7" unsigned="false" nullable="false" identity="true" comment="Banner ID" />
        <column xsi:type="varchar" name="title" nullable="true" length="255" comment="Title" />
        <column xsi:type="varchar" name="content" nullable="true" length="255" comment="Content" />
        <column xsi:type="varchar" name="image" nullable="true" length="255" comment="Image" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="banner_id" />
        </constraint>
   </table>
</schema>
